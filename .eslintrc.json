{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "rules": {
      "no-console": "off",
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-alert": "off",
      "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js", "frontend/webpack.*.js"]}],
      "no-underscore-dangle":"off"
    },
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true
    },
    "globals": {
      "Logger": true
    }
}
